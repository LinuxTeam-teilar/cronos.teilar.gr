/var/log/cronos_info.log /var/log/cronos_warning.log /var/log/cronos_error.log {
    create 660 root cronos
    sharedscripts
    missingok
    postrotate
        /etc/init.d/syslog-ng reload > /dev/null 2>&1 || true
    endscript
}
